---

import DefaultLayout from '../layouts/DefaultLayout.astro'

---
<DefaultLayout title="Contactanos">

	<div class="contact_form">

		<div class="formulario">			
      <h1>Contáctanos</h1>
				<h3>Escríbenos y en breve los pondremos en contacto contigo</h3>


					<form action="https://formsubmit.co/elcontrastenoticias@gmail.com" method="POST">				

						
								<p>
									<label for="nombre" class="colocar_nombre">Nombre
										<span class="obligatorio">*</span>
									</label>
										<input type="text" name="introducir_nombre" id="nombre" required="obligatorio" placeholder="Escribe tu nombre">
								</p>
							
								<p>
									<label for="email" class="colocar_email">Email
										<span class="obligatorio">*</span>
									</label>
										<input type="email" name="introducir_email" id="email" required="obligatorio" placeholder="Escribe tu Email">
								</p>
						
								<!-- <p>
									<label for="telefone" class="colocar_telefono">Teléfono
									</label>
										<input type="tel" name="introducir_telefono" id="telefono" placeholder="Escribe tu teléfono">
								</p>		 -->
							
								<!-- <p>
									<label for="website" class="colocar_website">Sitio web
									</label>
										<input type="url" name="introducir_website" id="website" placeholder="Escribe la URL de tu web">
								</p>		 -->
							
								<p>
									<label for="asunto" class="colocar_asunto">Asunto
										<span class="obligatorio">*</span>
									</label>
										<input type="text" name="introducir_asunto" id="assunto" required="obligatorio" placeholder="Escribe un asunto">
								</p>		
							
								<p>
									<label for="mensaje" class="colocar_mensaje">Mensaje
										<span class="obligatorio">*</span>
									</label>                     
                               		  <textarea name="introducir_mensaje" class="texto_mensaje" id="mensaje" required="obligatorio" placeholder="Deja aquí tu comentario..."></textarea> 
                               	</p>	  								
							
								<button type="submit" name="enviar_formulario" id="enviar"><p>Enviar</p></button>

								<p class="aviso">
									<span class="obligatorio"> * </span>los campos son obligatorios.
								</p>			
								
								
							<input type="hidden" name="_next" value="http://localhost:4321/contacto">

							<input type="hidden" name="_captcha" value="false">
						
					</form>
		</div>	
	</div>

  <style>
    body{
	height: 100%; 
}


.contact_form{	
	color: antiquewhite;
	width: 460px; 
  	height: auto;
 	 margin: 80px auto;
	border-radius: 10px;  
	padding-top: 30px;
	padding-bottom: 20px;  
 	background: linear-gradient(
		50deg,
		rgba(40,42,55,1) 50%,
		rgba(40,42,55,0.7)),
	url(/fondo_b.jpg);
	background-position: center;
	background-repeat: no-repeat;
	background-size: cover;
  	padding-left: 30px; 
}


input{
	background-color: #fbfbfb; 
	width: 100%; /* Usar 100% para que se ajuste al contenedor */
	max-width: 408px; /* Ancho máximo */
	height: 40px;
	border-radius: 5px;  
	border-style: solid; 
	border-width: 1px; 
	border-color: #0b375e; 
	margin-top: 10px;  
	padding-left: 10px;
  margin-bottom: 20px; 
}


textarea{
  background-color: #fbfbfb; 
	width: 405px; 
	height: 150px; 
	border-radius: 5px;  
	border-style: solid; 
	border-width: 1px; 
	border-color: #0b375e; 
	margin-top: 10px;  
	padding-left: 10px;
  margin-bottom: 20px; 
  padding-top: 15px; 
}


label{
	color: antiquewhite;
  display: block; 
	float: center; 	
}


button{
	height: 45px; 
	padding-left: 5px;
	padding-right: 5px; 	
	margin-bottom: 20px; 
	margin-top: 10px; 	
	text-transform: uppercase;
	background-color: #0b375e; 
	border-color: #0b375e; 
	border-style: solid; 
	border-radius: 10px;	
	width: 100%; /* Adaptar botón al 100% del ancho disponible */
	max-width: 420px; /* Ancho máximo */
	cursor: pointer;
}


button p{
	color: #fff; 
}


span{
	color: #ab4493; 
}


.aviso{
	font-size: 13px;  
	color:antiquewhite;  
}


h1{
	font-size: 39px;  
	text-align: letf; 
	padding-bottom: 20px; 
	color:antiquewhite;
}


h3{
	font-size: 16px; 
	padding-bottom: 30px;
	color:antiquewhite;   
}


p{
	font-size: 14px; 
	color: #0e0e0e; 
}


::-webkit-input-placeholder {
 color: #a8a8a8;
}


::-webkit-textarea-placeholder {
 color: #a8a8a8;
}


.formulario input:focus{
	outline:0;
	border: 1px solid #97d848;
}


.formulario textarea:focus{
	outline:0;
	border: 1px solid #97d848;
}

/* Ajustes para pantallas pequeñas */
@media (max-width: 767px) {
	.contact_form {
		margin: 20px auto;
		padding: 20px;
		background-size: contain; /* Cambiar el tamaño del fondo en pantallas pequeñas */
	}

	input, textarea {
		width: 100%; /* Asegurar que el ancho sea del 100% */
		max-width: none; /* Eliminar el ancho máximo en pantallas pequeñas */
	}

	button {
		width: 100%; /* Asegurar que el botón ocupe todo el ancho disponible */
		max-width: none;
	}
}
  </style>